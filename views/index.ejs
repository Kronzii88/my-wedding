    <style>
      /* --- THEME VARIABLES --- */
      :root {
        --bg-body: #f5f0ed;
        --bg-card: #ffffff;
        --bg-glass: rgba(255, 255, 255, 0.85);
        --bg-opening: #3e2723;
        --text-main: #4e342e;
        --text-muted: #8d6e63;
        --text-light: #efebe9;
        --color-heading: #5d4037;
        --color-accent: #a1887f;
        --border-color: #d7ccc8;
        --divider-fill: #ffffff;
        --divider-alt: #f5f0ed;
        --fern-color: rgba(255, 255, 255, 0.15);
        --map-filter: sepia(0.3);
      }
      @media (prefers-color-scheme: dark) {
        :root {
          --bg-body: #1a120e;
          --bg-card: #2d2420;
          --bg-glass: rgba(45, 36, 32, 0.85);
          --bg-opening: #1b100d;
          --text-main: #d7ccc8;
          --text-muted: #a1887f;
          --text-light: #efebe9;
          --color-heading: #d7ccc8;
          --color-accent: #8d6e63;
          --border-color: #4e342e;
          --divider-fill: #2d2420;
          --divider-alt: #1a120e;
          --fern-color: rgba(255, 255, 255, 0.05);
          --map-filter: invert(90%) hue-rotate(320deg) sepia(0.2);
        }
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Poppins", sans-serif;
        background-color: var(--bg-body);
        color: var(--text-main);
        overflow-x: hidden;
        transition: background-color 0.5s ease, color 0.5s ease;
      }
      h1,
      h2,
      h3 {
        font-family: "Playfair Display", serif;
      }
      section {
        position: relative;
        padding: 80px 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      /* OPENING */
      .opening {
        position: fixed;
        inset: 0;
        z-index: 1000;
        background: var(--bg-opening);
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 1.2s cubic-bezier(0.8, 0, 0.1, 1);
      }
      .opening.slide-up {
        transform: translateY(-100%);
      }
      .btn-open {
        margin-top: 30px;
        padding: 12px 32px;
        border-radius: 50px;
        background: var(--color-accent);
        color: white;
        border: none;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
      }
      .btn-open:hover {
        transform: scale(1.05);
        opacity: 0.9;
      }

      /* CARDS */
      .card {
        background: var(--bg-card);
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        max-width: 500px;
        width: 100%;
        text-align: center;
        margin-bottom: 20px;
        color: var(--text-main);
      }
      .glass-card {
        background: var(--bg-glass);
        backdrop-filter: blur(10px);
        padding: 40px 30px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px;
        position: relative;
        z-index: 2;
        color: var(--text-main);
        opacity: 0.6;
      }

      .profile-wrapper {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
        width: 100%;
        align-items: flex-start;
      }
      .profile-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--color-accent);
        padding: 4px;
        margin-bottom: 20px;
        background: var(--bg-card);
      }

      /* GIFTS & WISHES */
      .gift-wrapper {
        display: flex;
        gap: 20px;
        width: 100%;
        max-width: 1000px;
        padding: 10px 20px 30px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
      }
      .gift-wrapper::-webkit-scrollbar {
        display: none;
      }
      .gift-card {
        background: var(--bg-opening);
        min-width: 280px;
        scroll-snap-align: center;
        flex: 0 0 auto;
        margin-bottom: 0;
      }
      @media (min-width: 768px) {
        .gift-wrapper {
          justify-content: center;
          overflow-x: visible;
        }
        .gift-card {
          background: var(--bg-opening);
          flex: 1;
          max-width: 300px;
        }
      }

      .form-group {
        width: 100%;
        margin-bottom: 15px;
        text-align: left;
      }
      .form-label {
        display: block;
        margin-bottom: 5px;
        font-size: 14px;
        font-weight: 500;
        color: var(--color-heading);
      }
      .form-input {
        width: 100%;
        padding: 12px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        background: var(--bg-body);
        color: var(--text-main);
        font-family: "Poppins", sans-serif;
        outline: none;
      }
      .radio-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
      }
      .radio-label {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 14px;
        cursor: pointer;
        color: var(--text-muted);
      }
      .wysiwyg-container {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        background: var(--bg-body);
        overflow: hidden;
      }
      .wysiwyg-toolbar {
        background: var(--color-accent);
        padding: 5px 10px;
        display: flex;
        gap: 5px;
      }
      .wysiwyg-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        width: 25px;
        height: 25px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        font-size: 12px;
      }
      .wysiwyg-editor {
        min-height: 100px;
        padding: 12px;
        outline: none;
        color: var(--text-main);
      }
      .btn-submit {
        width: 100%;
        padding: 12px;
        background: var(--color-heading);
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 10px;
      }
      .btn-submit:hover {
        opacity: 0.9;
        transform: translateY(-2px);
      }

      .wish-wrapper {
        display: flex;
        gap: 20px;
        width: 100%;
        max-width: 1000px;
        padding: 10px 20px 30px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        margin-top: 30px;
      }
      .wish-wrapper::-webkit-scrollbar {
        display: none;
      }
      .wish-card {
        min-width: 280px;
        max-width: 300px;
        scroll-snap-align: center;
        flex: 0 0 auto;
        background: var(--bg-card);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-color);
        text-align: left;
      }
      .wish-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 8px;
      }
      .wish-name {
        font-weight: 600;
        color: var(--color-heading);
        font-size: 15px;
      }
      .wish-badge {
        font-size: 10px;
        padding: 3px 8px;
        border-radius: 10px;
        background: var(--color-accent);
        color: white;
      }
      .wish-body {
        font-size: 13px;
        color: var(--text-muted);
        line-height: 1.5;
        max-height: 100px;
        overflow-y: auto;
      }

      /* MISC */
      .divider {
        width: 101%;
        margin-top: -1px;
        display: block;
        transition: fill 0.5s ease;
      }
      iframe {
        filter: var(--map-filter);
      }
      .music-toggle {
        position: fixed;
        bottom: 25px;
        right: 25px;
        z-index: 1001;
        background: var(--color-heading);
        color: white;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        cursor: pointer;
      }
      .music-icon {
        animation: spin 4s linear infinite;
        animation-play-state: paused;
      }
      @keyframes spin {
        100% {
          transform: rotate(360deg);
        }
      }
      .copy-btn {
        margin-top: 15px;
        padding: 8px 20px;
        border-radius: 20px;
        border: 1px solid var(--border-color);
        background: transparent;
        color: var(--text-main);
        cursor: pointer;
      }
      .copy-btn:hover {
        background: var(--bg-body);
      }
      .countdown {
        display: flex;
        gap: 15px;
        margin: 20px 0;
      }
      .time {
        background: var(--color-heading);
        color: white;
        padding: 10px;
        border-radius: 8px;
        min-width: 65px;
        text-align: center;
        font-size: 14px;
      }

      .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }
      .hero-bg-slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
      .slide-img {
        position: absolute;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0;
        animation: slideShow 18s infinite ease-in-out;
        filter: sepia(0.3);
      }
      .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(62, 39, 35, 0.4);
        z-index: 0;
      }
      .slide-img:nth-child(1) {
        background-image: url("https://assets.titanhome.co.id/profile/1768098777195.jpeg");
        animation-delay: 0s;
      }
      .slide-img:nth-child(2) {
        background-image: url("https://assets.titanhome.co.id/profile/1768098735225.jpeg");
        animation-delay: 6s;
      }
      .slide-img:nth-child(3) {
        background-image: url("https://assets.titanhome.co.id/profile/1768098630576.jpeg");
        animation-delay: 12s;
      }
      @keyframes slideShow {
        0% {
          opacity: 0;
          transform: scale(1);
        }
        5% {
          opacity: 1;
        }
        33% {
          opacity: 1;
        }
        38% {
          opacity: 0;
        }
        100% {
          opacity: 0;
          transform: scale(1.1);
        }
      }

      .decoration-container {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        overflow: hidden;
        z-index: 1;
      }
      .fern {
        position: absolute;
        width: 280px;
        height: 280px;
        fill: var(--fern-color);
        transition: all 1.5s cubic-bezier(0.7, 0, 0.3, 1);
        filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.2));
        transform-origin: center;
      }
      .fern-bottom-left {
        bottom: -70px;
        left: -70px;
        transform: rotate(-25deg);
      }
      .fern-bottom-right {
        bottom: -70px;
        right: -70px;
        transform: scaleX(-1) rotate(-25deg);
      }
      .fern-top-left {
        top: -70px;
        left: -70px;
        transform: rotate(135deg);
      }
      .fern-top-right {
        top: -70px;
        right: -70px;
        transform: scaleX(-1) rotate(135deg);
      }
      .opening.animate-out .fern-bottom-left {
        transform: translate(-100px, 100px) rotate(-45deg);
        opacity: 0;
      }
      .opening.animate-out .fern-bottom-right {
        transform: translate(100px, 100px) scaleX(-1) rotate(-45deg);
        opacity: 0;
      }
      .opening.animate-out .fern-top-left {
        transform: translate(-100px, -100px) rotate(135deg);
        opacity: 0;
      }
      .opening.animate-out .fern-top-right {
        transform: translate(100px, -100px) scaleX(-1) rotate(135deg);
        opacity: 0;
      }
      .bird-container {
        position: absolute;
        bottom: 20%;
        left: -100px;
        z-index: 5;
        pointer-events: none;
        opacity: 0;
      }
      .bird {
        width: 40px;
        height: 30px;
        position: absolute;
        fill: rgba(255, 255, 255, 0.8);
      }
      .opening.animate-out .bird-container {
        opacity: 1;
      }
      .opening.animate-out .bird {
        animation: flyPass 2.5s forwards ease-out;
      }
      .bird:nth-child(1) {
        animation-delay: 0s;
        top: 0;
      }
      .bird:nth-child(2) {
        animation-delay: 0.2s;
        top: 40px;
        left: -30px;
        transform: scale(1);
      }
      .bird:nth-child(3) {
        animation-delay: 0.4s;
        top: -50px;
        left: -50px;
        transform: scale(2);
      }
      @keyframes flyPass {
        0% {
          transform: translate(0, 0) scale(1) rotate(0deg);
          opacity: 0;
        }
        10% {
          opacity: 1;
        }
        100% {
          transform: translate(120vw, -80vh) scale(0.5) rotate(-20deg);
          opacity: 0;
        }
      }
      .bg-lines-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
        overflow: hidden;
      }
      .bg-svg {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .abstract-path {
        fill: none;
        stroke: var(--color-accent);
        stroke-width: 1.5;
        stroke-linecap: round;
        opacity: 0.7;
        stroke-dasharray: 4000;
        stroke-dashoffset: 4000;
        transition: stroke-dashoffset 3.5s ease-in-out;
      }
      .bg-lines-container.active .abstract-path {
        stroke-dashoffset: 0;
      }
      .content-wrapper {
        position: relative;
        z-index: 2;
      }
    </style>
  </head>
