    <script>
      AOS.init({ once: false, duration: 800, offset: 100 });

      function openInvitation() {
        const op = document.getElementById("opening");
        const ct = document.getElementById("content");
        toggleMusic(true);
        op.classList.add("animate-out");
        setTimeout(() => {
          op.classList.add("slide-up");
